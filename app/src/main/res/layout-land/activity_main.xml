<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <!-- 左侧部分 - 控制面板 -->
        <LinearLayout
            android:layout_width="239dp"
            android:layout_height="match_parent"
            android:layout_weight="0.3"
            android:orientation="vertical">

            <!-- 顶部标题栏 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/headerCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/header_gradient"
                    android:orientation="horizontal"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:layout_marginEnd="12dp"
                        android:gravity="center"
                        android:text="❤️" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="146dp"
                            android:layout_height="44dp"
                            android:text="健康监测系统"
                            android:textColor="@color/white"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                    <Switch
                        android:id="@+id/deviceSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电源"
                        android:textColor="@color/white" />
                    <!-- 切换模式按钮，放在右边 -->
                    <Button
                        android:id="@+id/btnToggleTheme"
                        android:layout_width="wrap_content"
                        android:layout_height="35dp"
                        android:layout_gravity="end"
                        android:text="切换模式"
                        android:textSize="13sp" />

                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- ECG 按钮区域 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/ecgCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_background"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:padding="12dp"
                        android:text="📊 心电波形实时监测"
                        android:textColor="@color/primary_text"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <com.example.healthmonitor.ECGView
                        android:id="@+id/ecgView"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_margin="8dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- 右侧部分 - 健康数据展示 -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:layout_weight="0.7">

            <!-- 健康数据监测面板 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/dataCard"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/card_background"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <!-- 健康参数监测标题 -->
                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:text="🩺 健康参数监测"
                            android:textColor="@color/primary_text"
                            android:textSize="20sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <!-- 心电信号行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="📈" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="心电信号值"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/ecgValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- mV"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/ecgStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/status_bg_off"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="关闭"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/ecgToggleBtn"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/green"
                            android:text="开启"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- 体温监测行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="🌡️" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="体温"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/temperatureValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- °C"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/tempStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/status_bg_off"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="关闭"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/tempToggleBtn"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/green"
                            android:text="开启"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- 心率监测行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="❤️" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="当前心率"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/heartRateValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- bpm"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/hrStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/status_bg_off"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="关闭"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/hrToggleBtn"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/green"
                            android:text="开启"
                            android:textSize="12sp" />
                    </LinearLayout>

                    <!-- 心率最高值行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="⬆️" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="心率最高值"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/heartRateMaxValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- bpm"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <!-- 心率最低值行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="⬇️" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="心率最低值"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/heartRateMinValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- bpm"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <View
                            android:layout_width="60dp"
                            android:layout_height="32dp" />
                    </LinearLayout>

                    <!-- 血氧浓度行 -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:padding="16dp">

                        <TextView
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginEnd="12dp"
                            android:gravity="center"
                            android:text="🫁" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="血氧浓度"
                                android:textColor="@color/secondary_text"
                                android:textSize="14sp" />

                            <TextView
                                android:id="@+id/bloodOxygenValue"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="-- %"
                                android:textColor="@color/primary_text"
                                android:textSize="18sp"
                                android:textStyle="bold" />
                        </LinearLayout>

                        <TextView
                            android:id="@+id/oxStatus"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="8dp"
                            android:background="@drawable/status_bg_off"
                            android:paddingHorizontal="8dp"
                            android:paddingVertical="4dp"
                            android:text="关闭"
                            android:textColor="@color/white"
                            android:textSize="12sp" />

                        <Button
                            android:id="@+id/oxToggleBtn"
                            android:layout_width="60dp"
                            android:layout_height="40dp"
                            android:backgroundTint="@color/green"
                            android:text="开启"
                            android:textSize="12sp" />
                    </LinearLayout>

                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</ScrollView>
