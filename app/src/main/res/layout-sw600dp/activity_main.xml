<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/white"
    android:padding="12dp">

    <!-- 左侧：心电波形图 -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1.5"
        android:layout_marginEnd="8dp"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:background="@color/card_background">

            <!-- 顶部标题栏（平板布局中移到左侧） -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:background="@drawable/header_gradient">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="❤️"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="健康监测系统"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            android:textColor="@color/white" />

                        <TextView
                            android:id="@+id/connectionStatus"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="模拟数据模式"
                            android:textSize="12sp"
                            android:textColor="@color/white" />
                    </LinearLayout>

                    <Switch
                        android:id="@+id/deviceSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="电源"
                        android:textColor="@color/white" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

            <!-- 心电波形图 -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                app:cardCornerRadius="8dp"
                app:cardElevation="2dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/card_background">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="📊 心电波形实时监测"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:gravity="center"
                        android:padding="16dp"
                        android:textColor="@color/primary_text" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/divider" />

                    <com.example.healthmonitor.ECGView
                        android:id="@+id/ecgView"
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:layout_weight="1"
                        android:layout_margin="12dp" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

    <!-- 右侧：数据监测面板 -->
    <androidx.cardview.widget.CardView
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        app:cardCornerRadius="8dp"
        app:cardElevation="2dp">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/card_background">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="🩺 健康参数监测"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:padding="16dp"
                    android:textColor="@color/primary_text" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider" />

                <!-- 心电信号行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="📈"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="心电信号值"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/ecgValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- mV"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/ecgStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/status_bg_off"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/ecgToggleBtn"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:text="开启"
                        android:textSize="12sp"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light" />

                <!-- 体温监测行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="🌡️"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="体温"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/temperatureValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- °C"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tempStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/status_bg_off"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/tempToggleBtn"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:text="开启"
                        android:textSize="12sp"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light" />

                <!-- 心率监测行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="❤️"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="当前心率"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/heartRateValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- bpm"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/hrStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/status_bg_off"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/hrToggleBtn"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:text="开启"
                        android:textSize="12sp"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light" />

                <!-- 心率最高值行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="⬆️"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="心率最高值"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/heartRateMaxValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- bpm"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="32dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light" />

                <!-- 心率最低值行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="⬇️"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="心率最低值"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/heartRateMinValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- bpm"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <View
                        android:layout_width="60dp"
                        android:layout_height="32dp" />
                </LinearLayout>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="@color/divider_light" />

                <!-- 血氧浓度行 -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="16dp"
                    android:gravity="center_vertical">

                    <TextView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:text="🫁"
                        android:gravity="center"
                        android:layout_marginEnd="12dp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="血氧浓度"
                            android:textSize="14sp"
                            android:textColor="@color/secondary_text" />

                        <TextView
                            android:id="@+id/bloodOxygenValue"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="-- %"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:textColor="@color/primary_text" />
                    </LinearLayout>

                    <TextView
                        android:id="@+id/oxStatus"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="关闭"
                        android:paddingHorizontal="8dp"
                        android:paddingVertical="4dp"
                        android:background="@drawable/status_bg_off"
                        android:textColor="@color/white"
                        android:textSize="12sp"
                        android:layout_marginEnd="8dp" />

                    <Button
                        android:id="@+id/oxToggleBtn"
                        android:layout_width="60dp"
                        android:layout_height="32dp"
                        android:text="开启"
                        android:textSize="12sp"
                        android:backgroundTint="@color/green" />
                </LinearLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.cardview.widget.CardView>

</LinearLayout>